{
  "compilerOptions": {
    "target": "es2015",
        "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "allowImportingTsExtensions": false,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/icons": ["./src/assets/icon/index"],
      "@/logos": ["./src/assets/logo/index"],
      "@/text": ["./src/assets/text"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "../backend/src/healpers/query.helper.ts"],
  "exclude": ["node_modules", ".next", "out"]
}
